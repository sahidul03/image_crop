<div id="cover-image-crop-popup">
  <style>
      .actions{ margin: 5px 42%;}
      .crop-submit, .crop-cancel{ background: #f2f2f2; color: #333333; padding: 2px 5px; }
  </style>

  <%= image_tag @user.photo_url(:large), id: 'cropbox' %>

  <%= form_for @user, :url => image_save_users_path(@user), method: :post, :html => {:role => 'form', :id => 'cover-image-crop'} do |f| %>
      <% %w[x y w h].each do |attribute| %>
          <%= f.hidden_field "crop_#{attribute}", id:"crop_#{attribute}" %>
      <% end %>
      <%= f.hidden_field :id %>
      <div class="actions">
        <input type="button" class="btn crop-cancel" data-img_crop_id="<%= @user.id %>" value="Cancel" />
        <%= f.submit 'Crop changes', class:'btn crop-submit' %>
      </div>

  <% end %>

