      $(function() {
          $('#cropbox').Jcrop({
              onChange: update_crop,
              onSelect: update_crop,
              setSelect: [0, 0, 400, 400],
              aspectRatio: 4/4
          });
      });

      function update_crop(coords) {
          $('#crop_x').val(coords.x);
          $('#crop_y').val(coords.y);
          $('#crop_w').val(coords.w);
